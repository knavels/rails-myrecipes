<div class="row">
  <div class="col-md-2">
    <section class="chef_info center">
      <%= gravatar_for(comment.chef, size: 80) %>
    </section>
  </div>
  <div class="col-md-8 well">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet">
        <small>posted <%= time_ago_in_words(comment.created_at) %> age by <%= comment.chef.chefname.capitalize %></small>
      </span>
    </p>
  </div>
</div>