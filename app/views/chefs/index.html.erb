<%= render 'shared/page_title', title: "Chefs index page" %>

<div align="center">
  <%= will_paginate @chefs %>
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
          <li class="chef-title"><%= link_to chef.chefname.capitalize, chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes.any? %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @chefs %>
</div>