    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>

<h4 class="center"><%= @chef.chefname %>'s recipes</h4>

<div align="center">
  <%= will_paginate @chef_recipes %>
</div>

<%= render 'recipes/recipe', obj: @chef_recipes, show_avatar: false %>

